{
  "manifest_version": 3,
  "name": "LinkedIn Connections Dashboard",
  "version": "1.0.0",
  "description": "A Chrome extension that fetches and displays LinkedIn connections in a clean dashboard",
  "permissions": ["activeTab", "storage", "cookies"],
  "host_permissions": ["https://*.linkedin.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Connections Dashboard"
  },
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["dashboard.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
